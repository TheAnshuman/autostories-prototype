# Server Configuration
PORT=3001
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Cloud APIs
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_CLOUD_TTS_API_KEY=your_cloud_tts_api_key_here

# YouTube Data API v3
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:3001/auth/youtube/callback

# Image Generation APIs (choose one or more)
# Replicate
REPLICATE_API_KEY=your_replicate_api_key_here

# Stability AI (DreamStudio)
STABILITY_API_KEY=your_stability_api_key_here

# HuggingFace
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Google Imagen (if using)
GOOGLE_IMAGEN_API_KEY=your_imagen_api_key_here

# Optional: ElevenLabs Premium TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Upload and Storage
MAX_UPLOAD_SIZE=500mb
TEMP_STORAGE_PATH=./temp
OUTPUT_STORAGE_PATH=./output

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:5173

# YouTube Quota Settings
YOUTUBE_DAILY_QUOTA_LIMIT=10000
YOUTUBE_UPLOAD_QUOTA_COST=1600
